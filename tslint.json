{
    "jsRules": {
        "class-name": true,
        "no-shadowed-variable": true,
        "no-unused-variable": true,

        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-unsafe-finally": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "no-console": [true, "log", "error", "debug", "group", "groupEnd"]
    },
